source 'https://rubygems.org'

gem 'github-pages', group: :jekyll_plugins

group :jekyll_plugins do
  gem "eventmachine", :platforms => :ruby
  gem 'wdm', '>= 0.1.0' if Gem.win_platform?
  gem 'jekyll-livereload', '~> 0.2'

  gem 'jekyll-redirect-from'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'jekyll-feed'
  gem 'jekyll-paginate'
end